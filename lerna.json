{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.1.12",
  "changelogPreset": {
    "name": "conventionalcommits",
    "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
    "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
    "issuePrefixes": [
      "#"
    ],
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "beepboop",
        "section": "Beep Boop ðŸ¤–"
      },
      {
        "type": "docs",
        "scope": "deprecations",
        "section": "Deprecations"
      },
      {
        "type": "revert",
        "section": "Reverts",
        "hidden": true
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ]
  },
  "command": {
    "version": {
      "conventionalCommits": true,
      "allowBranch": [
        "main",
        "rc",
        "dev"
      ],
      "exact": true
    }
  }
}